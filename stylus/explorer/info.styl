/* INFO STYL ======================================== */

.info-wrap
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    width: 100%
    height: 100%
    flexbox()
    flex-flow: column nowrap
    background: color1

    .info-top,
    .info-bot
        flexbox()
        flex-flow: column nowrap
        width: 100%
    
/* INFO TOP ==================== */
.info-wrap .info-top
    height: 35%
    justify-content: space-between
    box-sizing()
    padding: 20px 0 10px 0

    .info-top-row
        flexbox()
        flex-flow: row nowrap
        align-items: center
        width: 100%

        .info-top-icon
            width: 48px
            height: 48px
            display: block
            position: relative
            flex: 0 0 48px
            background: url(img/files2x/file-html@2x.png) no-repeat center
            background-size: 30px

        .info-top-name
            margin-left: 10px
            font-size: 20px
            font-weight: 400
            color: color7
            ellipsis()






/* INFO BOTTOM ==================== */
.info-wrap .info-bot
    height: 65%
    overflow: auto
    background: color3

    .file-info
        display: block
        box-sizing()
        padding: 16px

        .file-info-row
            flexbox()
            flex-flow: row nowrap
            margin-bottom: 15px

            .file-info-left
                // flex: 0 0 100px
                width: 100px

            .file-info-right
                // flex: 1
                width: calc(100% - 100px)



.path-arrow
    width: 10px
    height: 10px
    background: url(img/explorer/arrow-path.png) no-repeat center
    background-size: 10px
    display: inline-block
    

